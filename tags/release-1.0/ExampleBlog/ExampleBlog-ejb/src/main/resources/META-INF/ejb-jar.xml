<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
    <display-name>TesteEJB_MAVEN_01-ejb</display-name>
    <enterprise-beans>
        <entity>
            <ejb-name>UserEJB</ejb-name>

            <home>app.UserHome</home>
            <remote>app.User</remote>
            <ejb-class>app.UserBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>app.UserKey</prim-key-class>
            <reentrant>false</reentrant>
        </entity>
        <entity>
            <ejb-name>ArticleEJB</ejb-name>

            <home>app.ArticleHome</home>
            <remote>app.Article</remote>
            <ejb-class>app.ArticleBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>app.ArticleKey</prim-key-class>
            <reentrant>false</reentrant>
        </entity>
    </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>UserEJB</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>ArticleEJB</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
    </assembly-descriptor>
</ejb-jar>
