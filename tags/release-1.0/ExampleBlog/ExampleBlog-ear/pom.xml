<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
        <artifactId>ExampleBlog</artifactId>
        <groupId>mda.ic.uff.br</groupId>
        <version>1.0</version>
    </parent>
  <groupId>mda.ic.uff.br</groupId>
  <artifactId>ExampleBlog-ear</artifactId>
  <packaging>ear</packaging>
  <version>1.0</version>
  <name>ExampleBlog-ear J2EE 1.4 Assembly</name>
  <url>http://maven.apache.org</url>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
            <version>1.4</version>
        </configuration>
      </plugin>
    </plugins>
    <finalName>ExampleBlog-ear</finalName>
  </build>
    <dependencies>
        <dependency>
            <groupId>mda.ic.uff.br</groupId>
            <artifactId>ExampleBlog-ejb</artifactId>
            <version>1.0</version>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>mda.ic.uff.br</groupId>
            <artifactId>ExampleBlog-web</artifactId>
            <version>1.0</version>
            <type>war</type>
        </dependency>
    </dependencies>
</project>

